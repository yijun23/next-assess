<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :game_name %>
    <%= form.text_field :game_name, placeholder: 'Full game name' %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, placeholder: 'whatever' %>
  </div>

  <div class="field">
    <%= form.label :game_type %>
    <%= form.text_field :game_type, placeholder: 'Nintendo? Sony?' %>
  </div>

  <div class="field">
    <%= form.label :year_purchased %>
    <%= form.number_field :year_purchased, placeholder: 'YYYY' %>
  </div>

  <div class="field">
    <%= form.label :price_in_ringgit %>
    <%= form.number_field :price, placeholder: '$ ringgit lah' %>
  </div>

    <div class="field">
    <%= form.label :image_upload %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
